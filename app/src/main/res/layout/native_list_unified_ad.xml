<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complex_unified_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_list_image_height"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <!--android:background="@color/ad_badge_background"-->

                <ImageView
                    android:id="@+id/ad_image"
                    android:layout_width="@dimen/ad_list_image_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|start"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    tools:background="@color/black_87" />

                <com.google.android.gms.ads.formats.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="@dimen/ad_list_image_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|start"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    tools:visibility="gone"
                    tools:background="@color/black_87" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ad_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/module_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ad_app_icon"
                        android:layout_width="@dimen/ad_app_icon_list_size"
                        android:layout_height="@dimen/ad_app_icon_list_size"
                        android:layout_marginEnd="@dimen/module_tiny"
                        android:adjustViewBounds="true"
                        tools:src="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_font"
                        tools:text="Headline" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/module_tiny"
                    android:textColor="@color/font_black_101010"
                    android:textSize="@dimen/tiny_font"
                    tools:text="Advertiser" />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingTop="@dimen/module_tiny"
                    android:textSize="@dimen/tiny_font"
                    tools:text="Demo ad body text goes here" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/tv_ad_attribution_badge" />
    </FrameLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>
